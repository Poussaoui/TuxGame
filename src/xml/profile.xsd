    <xsd:restriction base="xsd:string">
      <xsd:pattern value="([A-ZÀÂÊÏËÜÎÔÛÙÈÉÇa-zéèàâêïëüîôûùç]*'?\s?-?)+" />
    </xsd:restriction>
  </xsd:simpleType>
  
    
</xsd:schema>
