<xsd:schema version="1.0"
           targetNamespace="http://myGame/tux"
           xmlns:tux="http://myGame/tux"
           xmlns:xsd="http://www.w3.org/2001/XMLSchema"
           elementFormDefault="qualified">
    
    <xsd:element name="dico" type="tux:Dico"/>
    <xsd:complexType name="Dico">
        <xsd:sequence>
            <xsd:element name="liste_mots" type="tux:Liste_mots"/>
        </xsd:sequence>
    </xsd:complexType>
    
    <xsd:complexType name="Liste_mots">
        <xsd:sequence>
            <xsd:element name="mot" type="tux:Mot" minOccurs="1" maxOccurs="unbounded"/>
        </xsd:sequence>
    </xsd:complexType>
    
    <xsd:complexType name="Mot">
        <xsd:simpleContent>
            <xsd:extension base="tux:MotRestreint">
                <xsd:attribute name="level" type="tux:Level" use="required"/>
            </xsd:extension>
        </xsd:simpleContent>
    </xsd:complexType>
    
